pipeline {
    agent any
    environment {
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages {
        stage('Cleanup') {
            steps {
                cleanWs() // Cleans up the workspace
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Rolex960/task_1' // Checkout from GitHub repository
            }
        }
        stage('Maven Build') {
            steps {
                sh "mvn clean package" // Runs Maven build
            }
        }
        stage('Connect to Server') {
            steps {
                sshagent(['conn']) {
                    sh 'ssh -o StrictHostKeyChecking=no ubuntu@43.205.116.16'
                }
            }
        }
        stage('copy artifact') {
            steps {
                    sh 'scp /var/lib/jenkins/workspace/connectiion/target/devops-integration.jar ubuntu@43.205.116.16:/home/ubuntu/Task'
            }
        }
        stage('Docker Image') {
            steps {
                script {
                    // Correct usage of shell commands without extra 'sh' calls
                    sh '''
                        docker build -t jar_image .
                        docker run --name jar-con -d -p 9900:8080 jar_image
                    '''
                }
            }
        }
    }
}
